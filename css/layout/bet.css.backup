.bet {
    background-image: url("/assets/images/Leo-Santana-Carlinhos.png");
    background-repeat: no-repeat;
    background-size: cover;
}

.box-bet {
    display: flex;
    align-items: center;
   margin-top: -40%;
   justify-content: center;
   text-align: center;
   flex-direction: column;
   gap: var(--spacing-xl);
}

@media (max-width: 950px) {
    .bet {
        background-image: url("/assets/images/Mobile-Carlinhos-Leo.jpg");
        background-position: bottom;
    }

    .container.div-bet {
        justify-content: start;
    }

    .box-bet {
        margin-top: var(--spacing-xl);
        max-width: 90%;
    }
}