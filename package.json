{
  "type": "module",
  "devDependencies": {
    "eslint": "^9.27.0",
    "htmlhint": "^1.1.4",
    "husky": "^8.0.0",
    "lint-staged": "^16.0.0",
    "prettier": "^3.5.3",
    "stylelint": "^16.19.1",
    "stylelint-config-standard": "^38.0.0"
  },
  "scripts": {
    "prepare": "husky install"
  },
  "lint-staged": {
    "*.{js,jsx}": [
      "eslint --fix --cache --max-warnings=10",
      "prettier --write"
    ],
    "*.html": [
      "htmlhint --config .htmlhintrc",
      "prettier --write"
    ]
  }
}
